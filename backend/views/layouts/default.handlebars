<!DOCTYPE html>
<html>
{{> headers/header-main }}
<body>
{{> navigation/navigation }}
{{#if error}}
    <div class="alert alert-danger">{{error}}</div>
{{/if}}
{{{body}}}
{{> sidebars/user-search-sb }}
{{> sidebars/chat-sb }}
{{> modals/alert }}
{{> modals/context-menu }}
<div id="appointmentBook" class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-5">
            <!-- date picker here -->
            <div id="calendarControl">

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <!-- scheduler here -->
            <div id="calendarDetail"></div>
        </div>
    </div>
</div>
<div id="demo-add-delete-event"></div>

<div id="demo-add-popup">
    <div class="mbsc-form-group">
        <label>
            Title
            <input mbsc-input id="event-title">
        </label>
        <label>
            Description
            <textarea mbsc-textarea id="event-desc"></textarea>
        </label>
    </div>
    <div class="mbsc-form-group">
        <label for="event-all-day">
            All-day
            <input mbsc-switch id="event-all-day" type="checkbox" />
        </label>
        <label for="start-input">
            Starts
            <input mbsc-input id="start-input" />
        </label>
        <label for="end-input">
            Ends
            <input mbsc-input id="end-input" />
        </label>
        <div id="event-date"></div>
        <label>
            Show as busy
            <input id="event-status-busy" mbsc-segmented type="radio" name="event-status" value="busy">
        </label>
        <label>
            Show as free
            <input id="event-status-free" mbsc-segmented type="radio" name="event-status" value="free">
        </label>
        <div class="mbsc-button-group">
            <button class="mbsc-button-block" id="event-delete" mbsc-button data-color="danger" data-variant="outline">Delete event</button>
        </div>
    </div>
</div>
<div id="root"></div>
{{> footers/footer-main }}
</body>
{{#if user}}
    <script>
        const loggedInUser = {
            _id: '{{user._id}}',
            username: '{{user.username}}'
        };
    </script>
{{/if}}
{{> jsincludes/js-vendors}}
{{> jsincludes/js-popovers-tooltips}}
{{> jsincludes/js-app}}
</html>
