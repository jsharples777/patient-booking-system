<div id="chatSideBar" class="sidebar-right bg-dark">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pb-3 align-items-end">
                <button type="button" class="close text-white" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex w-100 justify-content-between">
                        <h5>Clinic Chat</h5>
                        <span>Do Not Disturb  <input type="checkbox" id="doNotDisturb" mbsc-input mbsc-checkbox value="doNotDisturb"/></span>
                    </div>
                    <div class="card-body scroll-chatlogs">
                        <div id="chatLogs" style="font-size: 12pt" class="list-group list-group-flush">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 mt-2">
                <div class="card">
                    <div class="card-body room" id="chatLogRoom">
                        <div id="chatLog" class="messages">
                        </div>
                    </div>
                    <div class="card-footer">
                        <form id="newMessage">
                            <div class="form-row">
                                <input type="text" style='width: 80%' class="form-control" id="message" placeholder="Message">
                                <button type="submit" class="ml-2 btn btn-primary btn-circle btn-md" id="submitMessage"><i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                            </div>
                            <div class="form-row pt-2">
                                <select id="priority" class="form-control">
                                    <option value="0" selected>Normal</option>
                                    <option value="1">High</option>
                                    <option value="2">Urgent</option>
                                </select>
                                <input type="text" class='form-control mt-2' id="clinicChatFastPatientSearch" placeholder="Patient"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
