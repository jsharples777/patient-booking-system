<div class="container-fluid pt-3 pb-3 root-login">
    <div class="row">
        <div class="col-sm-12 offset-sm-0 offset-md-3 col-md-6 offset-lg-4 col-lg-4 align-content-center">
            <div class="card">
                <div class="card-header bg-dark text-white">Change Password</div>
                <div class="card-body bg-light">
                    <form role="form" action="/change-password" method="post" id="changePassword">
                        <div class="form-group">
                            <input class="form-control" id="username" type="text" name="username" placeholder="Enter Username"/>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="pwd" type="password" name="password" placeholder="Old Password"/>
                        </div>
                        <div class="form-group">
                            <input class="form-control" id="pwd" type="password" name="newPassword" placeholder="New Password"/>
                        </div>
                        <button class="btn btn-primary mt-1" type="submit">Change Password</button>
                        <a href="/">
                            <button class="btn btn-secondary mt-1" type="button">Cancel</button>
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>